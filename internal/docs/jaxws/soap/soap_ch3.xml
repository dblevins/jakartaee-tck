		<!-- Chapter 3 Messaging -->

		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R9700</id>
			<description>A MESSAGE MUST serialize the envelope as the exclusive payload of the HTTP entity-body.</description>
			<location chapter = "3" section = "1.1"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R9701</id>
			<description>A MESSAGE MUST serialize the envelope as XML 1.0.</description>
			<location chapter = "3" section = "1.1"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R9702</id>
			<description>A MESSAGE MUST have a "Content-Type" HTTP header field.</description>
			<location chapter = "3" section = "1.1"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R9703</id>
			<description>A MESSAGE's "Content-Type" HTTP header field MUST have a field-value whose media type is "text/xml".</description>
			<location chapter = "3" section = "1.1"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R9704</id>
			<description>An ENVELOPE SHOULD NOT contain the namespace declaration xmlns:xml="http://www.w3.org/XML/1998/namespace".</description>
			<location chapter = "3" section = "1.2"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R4001</id>
			<description>A RECEIVER MUST accept envelopes that include the Unicode Byte Order Mark (BOM).</description>
			<location chapter = "3" section = "1.3"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R1010</id>
			<description>A RECEIVER MUST accept messages with envelopes that contain an XML Declaration.</description>
			<location chapter = "3" section = "1.4"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R1012</id>
			<description>A MESSAGE MUST serialize the envelope using either UTF-8 or UTF-16 character encoding. </description>
			<location chapter = "3" section = "1.5"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R1018</id>
			<description>A MESSAGE's "Content-Type" HTTP header field-value MUST indicate the correct character encoding, using the "c
harset" parameter.</description>
			<location chapter = "3" section = "1.5"/>
		</assertion>
		<assertion required = "true" impl-spec = "false" defined-by = "technology" status = "active" testable = "true">
			<id>WSI:SPEC:R1019</id>
			<description>A RECEIVER MUST ignore the encoding pseudo-attribute of the envelope's XML declaration in a message.</description>
			<location chapter = "3" section = "1.5"/>
		</assertion>
